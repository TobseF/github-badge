{
  "compilerOptions": {
    "allowJs": false,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["update-badge-script.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["update-badge-script.ts"]
  },
  "lock": false,
  "nodeModulesDir": "auto",
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-write update-badge-script.ts"
  },
  "exclude": [
    "dist/"
  ]
}